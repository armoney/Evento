<div class='container'>

  <h1><%= @user.first_name.capitalize %>'s Profile</h1>

  <a href="/../users/<%= @user.id %>/events/new">Create an Event!</a><br>

  <a href="/../users/<%= @user.id %>/contacts/new">Add a contact</a><br>

  <a href="/../users/<%= @user.id %>/contacts/index">View contacts</a><br>

  <% @user_events.each do |event| %>
    <a href="/../users/<%= @user.id %>/events/<%= event.id %>"><%= event.title %></a>
    <form action="/../users/<%= @user.id %>/events/<%= event.id %>"  method="post">
      <input type="hidden" name="_method" value= "delete">
      <input type="submit" value="delete">
    </form>
    <a href="/users/<%= @user.id %>/events/<%= event.id %>/edit">edit</a>
    <br>
  <% end %>

</div>
